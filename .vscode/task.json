{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "g++", // 任务的名字, 跟上面 launch.json 的 perLaunchTask 值相对应
            "type": "shell", // 使用命令行的类型
            "command": "g++", // 使用的编译命令
            "args": [ // 参数
                "${file}",
                // "-o",
                // "${fileBasenameNoExtension}.exe",
            ],
        }
    ]
}